<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link rel="shortcut icon" href="/images/favicon.ico" type="image/x-icon">
  <link href="https://cdn.jsdelivr.net/npm/tailwindcss@2.2.19/dist/tailwind.min.css" rel="stylesheet">
  <script src="https://kit.fontawesome.com/ba6d17dfa2.js" crossorigin="anonymous"></script>
  <title>Student Dashboard</title>
  <style>
    body {
      font-family: 'Poppins', sans-serif; 
    }
    nav {
      background-color: #3498db;
    }
    .text-logo {
      color: #ffffff; 
    }
    .nav-link {
      color: #ffffff;
      transition: color 0.3s ease;
    }
    .nav-link:hover {
      color: #ffffff;
      text-decoration: underline;
    }
    #profileDropdown {
      box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
    }
    .dropdown-link {
      color: #333;
    }
    .dropdown-link:hover {
      background-color: #3498db;
      color: #ffffff;
    }
    .course-info {
      background-color: #ffffff;
      border-radius: 8px;
      padding: 20px;
      margin: 20px auto;
      box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
    }
    .chapterform {
      background-color: #ffffff;
      border-radius: 8px;
      padding: 20px;
      margin: 20px auto;
      box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
    }
    .add-chapter-btn {
      background-color: #27ae60;
      color: #ffffff;
      padding: 10px 20px;
      border-radius: 5px;
      cursor: pointer;
      transition: background-color 0.3s ease;
    }
    .add-chapter-btn:hover {
      background-color: #219653;
    }
    .existing-chapters {
      margin-top: 40px;
    }
  
    .chapter-card {
      background-color: #ffffff;
      border-radius: 8px;
      padding: 20px;
      margin: 20px auto;
      box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
    }
  
    .edit-chapter-btn {
      background-color: #3498db;
      color: #ffffff;
      padding: 10px 20px;
      border-radius: 5px;
      cursor: pointer;
      transition: background-color 0.3s ease;
    }
  
    .edit-chapter-btn:hover {
      background-color: #2980b9;
    }
  </style>
</head>
<body class="bg-gray-100">
  <!-- Navbar -->
  <nav class="bg-blue-500 p-4 text-white flex items-center justify-between">
    <div class="flex items-center">
      <a href="/student"><span class="text-4xl font-semibold">LMS</span></a>
    </div>
    <div class="flex items-center space-x-8">
      <!-- Dashboard Link for navbar -->
      <a href="/student" class="hover:underline text-lg">Dashboard<i class="fa-solid fa-table-columns" style="margin-left: 4px;"></i></a>

      <a href="/profile" class="hover:underline text-lg">Profile<i class="fa-regular fa-user" style="margin-left: 4px;"></i></a>

      <a href="/signout" class="hover:underline text-lg">SignOut<i class="fa-solid fa-arrow-right-from-bracket" style="margin-left: 4px;"></i></a>

    </div>
  </nav>

  <div class="flex justify-center flex-col gap-4 course-info">
    <h4 class="text-2xl font-bold text-center">Course Name: <%= course.courseName %></h4>
    <p class="text-lg text-center">Course Description: <%= course.description %></p>
  </div>

  <form action="/educator/addchapter/<%= course.id %>" method="post" class="chapterform">
    <div class="chapter-div bg-white p-4 my-4 flex flex-col mx-64">
      <input name="_csrf" value="<%= csrfToken %>" type="hidden"/>
      <input type="text" class="my-2 p-2 border rounded" name="chapternumber" placeholder="Chapter Number">
      <input type="text" class="my-2 p-2 border rounded" name="chaptername" placeholder="Chapter Title">
      <textarea class="my-2 p-2 border rounded" name="chapterdescription" placeholder="Chapter Description"></textarea>
    </div>
    <button class="add-chapter-btn mx-auto" type="submit">Add Chapter</button>
    <%- include('partials/flashmessage') %>
  </form>

  <div class="flex flex-col justify-center items-center existing-chapters">
    <h2 class="text-2xl mb-4">Existing Chapters</h2>

    <% existingChapters.forEach((chapter) => { %>
      <div class="chapter-card">
        <h3 class="text-xl mb-2">Chapter <%= chapter.chapterNumber %></h3>
        <p class="text-gray-600 mb-2"><%= chapter.chapterTitle %></p>
        <p class="text-gray-600 mb-4"><%= chapter.chapterDescription %></p>
        <a href="/educator/editchapter/<%= chapter.id %>" class="edit-chapter-btn inline-block">Edit Chapter</a>
      </div>
    <% }) %>
  </div>

</body>
</html>

