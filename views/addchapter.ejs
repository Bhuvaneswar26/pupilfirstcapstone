<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Add Chapters</title>
  <link href="https://cdn.jsdelivr.net/npm/tailwindcss@2.2.19/dist/tailwind.min.css" rel="stylesheet">
  <script src="https://kit.fontawesome.com/ba6d17dfa2.js" crossorigin="anonymous"></script>
  <style>
    /* Add your custom styles here */
    body {
      font-family: 'Poppins', sans-serif; /* Example: Use Google Fonts for a stylish font */
    }

    /* Header */
    nav {
      background-color: #3498db; /* Update to your preferred header background color */
    }

    .text-logo {
      color: #ffffff; /* Update to your preferred logo color */
    }

    .nav-link {
      color: #ffffff;
      transition: color 0.3s ease;
    }

    .nav-link:hover {
      color: #ffffff;
      text-decoration: underline;
    }

    /* Profile Dropdown */
    #profileDropdown {
      box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
    }

    .dropdown-link {
      color: #333;
    }

    .dropdown-link:hover {
      background-color: #3498db;
      color: #ffffff;
    }

    /* Course Information Section */
    .course-info {
      background-color: #ffffff;
      border-radius: 8px;
      padding: 20px;
      margin: 20px auto;
      box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
    }

    /* Chapter Form */
    .chapterform {
      background-color: #ffffff;
      border-radius: 8px;
      padding: 20px;
      margin: 20px auto;
      box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
    }

    /* Add Chapter Button */
    .add-chapter-btn {
      background-color: #27ae60;
      color: #ffffff;
      padding: 10px 20px;
      border-radius: 5px;
      cursor: pointer;
      transition: background-color 0.3s ease;
    }

    .add-chapter-btn:hover {
      background-color: #219653;
    }

    /* Existing Chapters Section */
    .existing-chapters {
      margin-top: 40px;
    }

    .chapter-card {
      background-color: #ffffff;
      border-radius: 8px;
      padding: 20px;
      margin: 20px auto;
      box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
    }

    .edit-chapter-btn {
      background-color: #3498db;
      color: #ffffff;
      padding: 10px 20px;
      border-radius: 5px;
      cursor: pointer;
      transition: background-color 0.3s ease;
    }

    .edit-chapter-btn:hover {
      background-color: #2980b9;
    }
  </style>
</head>
<body class="font-sans bg-blue-200">

  <nav class="bg-blue-500 p-4 text-white flex items-center justify-between">
    <!-- Left side: Logo -->
    <div class="flex items-center">
      <span class="text-4xl font-semibold text-logo">LMS</span>
    </div>

    <!-- Right side: Profile Button -->
    <div class="flex items-center space-x-4">
      <!-- Dashboard Link -->
      <a href="#" class="hover:underline text-lg nav-link">Dashboard</a>

      <!-- Profile Dropdown -->
      <div class="relative inline-block text-left">
        <button type="button" id="profileButton" class="inline-flex items-center justify-center w-10 h-10 bg-blue-700 rounded-full focus:outline-none focus:border-blue-700 focus:ring focus:ring-blue-200">
          <i class="fas fa-user text-white"></i>
        </button>

        <!-- Dropdown Menu -->
        <div id="profileDropdown" class="hidden absolute right-0 mt-2 w-48 bg-white border border-gray-200 rounded-md shadow-lg">
          <div class="py-1">
            <a href="#" class="block px-4 py-2 text-sm dropdown-link">Profile</a>
            <a href="#" class="block px-4 py-2 text-sm dropdown-link">Edit Profile</a>
            <a href="#" class="block px-4 py-2 text-sm dropdown-link">Sign Out</a>
          </div>
        </div>
      </div>
    </div>
  </nav>

  <div class="flex justify-center flex-col gap-4 course-info">
    <h4 class="text-2xl font-bold text-center">Course Name: <%= course.courseName %></h4>
    <p class="text-lg text-center">Course Description: <%= course.description %></p>
  </div>

  <form action="/educator/addchapter/<%= course.id %>" method="post" class="chapterform">
    <!-- Initial Chapter -->
    <div class="chapter-div bg-white p-4 my-4 flex flex-col mx-64">
      <input name="_csrf" value="<%= csrfToken %>" type="hidden"/>
      <input type="text" class="my-2 p-2 border rounded" name="chapternumber" placeholder="Chapter Number">
      <input type="text" class="my-2 p-2 border rounded" name="chaptername" placeholder="Chapter Title">
      <textarea class="my-2 p-2 border rounded" name="chapterdescription" placeholder="Chapter Description"></textarea>
    </div>
    <button class="add-chapter-btn mx-auto" type="submit">Add Chapter</button>
    <%- include('partials/flashmessage') %>
  </form>

  <div class="flex flex-col justify-center items-center existing-chapters">
    <h2 class="text-2xl mb-4">Existing Chapters</h2>

    <% existingChapters.forEach((chapter) => { %>
      <div class="chapter-card">
        <h3 class="text-xl mb-2">Chapter <%= chapter.chapterNumber %></h3>
        <p class="text-gray-600 mb-2"><%= chapter.chapterTitle %></p>
        <p class="text-gray-600 mb-4"><%= chapter.chapterDescription %></p>
        <!-- Add Edit button with link to chapter editing page -->
        <a href="/educator/editchapter/<%= chapter.id %>" class="edit-chapter-btn inline-block">Edit Chapter</a>
      </div>
    <% }) %>
  </div>

</body>
</html>
