<!-- addPage.ejs -->

<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Add Page</title>
  <link href="https://cdn.jsdelivr.net/npm/tailwindcss@2.2.19/dist/tailwind.min.css" rel="stylesheet">
  <script src="https://kit.fontawesome.com/ba6d17dfa2.js" crossorigin="anonymous"></script>
  <style>
    /* Add your custom styles here */
  </style>
</head>
<body class="font-sans bg-blue-200">

  <!-- Navigation Bar -->
  <nav class="bg-blue-500 p-4 text-white flex items-center justify-between">
    <div class="flex items-center">
      <span class="text-4xl font-semibold">LMS</span>
    </div>
    <div class="flex items-center space-x-4">
      <a href="#" class="hover:underline text-lg">Dashboard</a>
      <div class="relative inline-block">
        <button type="button" id="profileButton" class="inline-flex items-center justify-center w-10 h-10 bg-blue-700 rounded-full focus:outline-none focus:border-blue-700 focus:ring focus:ring-blue-200">
          <i class="fas fa-user text-white"></i>
        </button>
        <div id="profileDropdown" class="hidden absolute right-0 mt-2 w-48 bg-white border border-gray-200 rounded-md shadow-lg">
          <div class="py-1">
            <a href="#" class="block px-4 py-2 text-sm text-gray-700 hover:bg-blue-500 hover:text-white">Profile</a>
            <a href="#" class="block px-4 py-2 text-sm text-gray-700 hover:bg-blue-500 hover:text-white">Edit Profile</a>
            <a href="#" class="block px-4 py-2 text-sm text-gray-700 hover:bg-blue-500 hover:text-white">Sign Out</a>
          </div>
        </div>
      </div>
    </div>
  </nav>

  <div class="container m-4">

    <h2 class="text-2xl mb-4 mt-8 ml-4">Edit Existing Page Sections</h2>

    <% pagecontents.forEach((section) => { %>
      <form action="/educator/editcontent/<%= page.id  %>/<%= section.id %>" class="mb-8" method="POST" enctype="application/x-www-form-urlencoded">
        <!-- Add some spacing and styling to each section -->
        <div class="mb-8 bg-white p-6 rounded-lg shadow-md">
          <h3 class="text-xl mb-4">Section: <%= section.sectionNumber %></h3>
          <input name="_csrf" value="<%= csrfToken %>" type="hidden"/>
          <input type="hidden" name="_method" value="PUT" />
          <label for="sectiontype" class="block mb-2">Section Type:</label>
          <select id="sectiontype" name="sectiontype" class="w-full border border-gray-300 rounded-md p-2" required>
            <!-- Simplify and improve the select options -->
            <option value="text" <%= section.sectionType === "text" ? 'selected' : '' %>>Text</option>
            <option value="image" <%= section.sectionType === "image" ? 'selected' : '' %>>Image</option>
            <option value="video" <%= section.sectionType === "video" ? 'selected' : '' %>>Video</option>
          </select>

          <div class="mb-4">
            <label for="sectioncontent" class="block mb-2">Section Content:</label>
            <textarea id="sectioncontent" name="sectioncontent" class="w-full border border-gray-300 rounded-md p-2 mb-4 h-24" required><%= section.content %></textarea>
          </div>

          <button type="submit" class="bg-blue-500 text-white px-4 py-2 rounded-md" >Save changes</button>
        </div>
      </form>
    <% }) %>

    <!-- Page Form -->
    <section class="bg-white p-6 rounded-lg shadow-md mb-8">
      <h1 class="text-4xl font-semibold mb-6">Add Page</h1>
      <!-- Number of Sections -->
      <div class="mb-4">
        <label for="numSections" class="block mb-2">Number of Sections to be added:</label>
        <input type="text" value="<%= page.id %>" class="chapterid" hidden>
        <input type="number" id="numSections" name="numSections" class="w-full border border-gray-300 rounded-md p-2" required>
      </div>
      <button type="submit" class="bg-blue-500 text-white px-4 py-2 rounded-md" onclick="nofosubmit()">Submit</button>

      <!-- Section Types -->
      <form action="" method="post" class="pagessection">
        <!-- number of section will be filled automatically based on  input givens -->
        <input name="existnumSections" value="<%= pagecontents.length %>" type="hidden"/>
        <input name="_csrf" value="<%= csrfToken %>" type="hidden"/>
      </form>
    </section>
  </div>

  <!-- Footer -->
  <%- include('partials/footer') %>

  <script>
    function nofosubmit() {
      var nofo = document.getElementById("numSections").value;
      var form = document.getElementsByClassName("pagessection")[0];
      var chapterid = document.getElementsByClassName("chapterid")[0].value;
      const existnumSections = document.getElementsByName("existnumSections")[0].value;
      let start = Number(existnumSections);
      let end = Number(nofo) + Number(existnumSections);
      for (var i = start; i < end; i++) {
        form.innerHTML += `
          <div class='mb-8 bg-white p-6 rounded-lg shadow-md'>
            <h3 class='text-xl mb-4'>Section:${i + 1}</h3>
            <label for='sectionType${i + 1}' class='block mb-2'>Section Type:</label>
            <select id='sectionType${i + 1}' name='sectionType${i + 1}' class='w-full border border-gray-300 rounded-md p-2' required>
              <option value='text'>Text</option>
              <option value='image'>Image</option>
              <option value='video'>Video</option>
            </select>
            <div class='mb-4'>
              <label for='sectionContent${i + 1}' class='block mb-2'>Section Content:</label>
              <textarea id='sectionContent${i + 1}' name='sectionContent${i + 1}' class='w-full border border-gray-300 rounded-md p-2 mb-4 h-24' required></textarea>
            </div>
          </div>`;
      }
      form.innerHTML += "<button type='submit' class='bg-blue-500 text-white px-4 py-2 rounded-md'>Save Changes</button>";
      form.action = `/educator/addcontent/${chapterid}/${nofo}`;
    }
  </script>

</body>
</html>
