<!-- editCourses.ejs -->

<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Edit Courses</title>
  <link href="https://cdn.jsdelivr.net/npm/tailwindcss@2.2.19/dist/tailwind.min.css" rel="stylesheet">
  <script src="https://kit.fontawesome.com/ba6d17dfa2.js" crossorigin="anonymous"></script>
  <style>
    /* Add your custom styles here */
  </style>
</head>
<body class="font-sans bg-blue-200">

  <!-- Navigation Bar -->
  <nav class="bg-blue-500 p-4 text-white flex items-center justify-between">
    <div class="flex items-center">
      <span class="text-4xl font-semibold">LMS</span>
    </div>
    <div class="flex items-center space-x-4">
      <a href="#" class="hover:underline text-lg">Dashboard</a>
      <div class="relative inline-block">
        <button type="button" id="profileButton" class="inline-flex items-center justify-center w-10 h-10 bg-blue-700 rounded-full focus:outline-none focus:border-blue-700 focus:ring focus:ring-blue-200">
          <i class="fas fa-user text-white"></i>
        </button>
        <div id="profileDropdown" class="hidden absolute right-0 mt-2 w-48 bg-white border border-gray-200 rounded-md shadow-lg">
          <div class="py-1">
            <a href="#" class="block px-4 py-2 text-sm text-gray-700 hover:bg-blue-500 hover:text-white">Profile</a>
            <a href="#" class="block px-4 py-2 text-sm text-gray-700 hover:bg-blue-500 hover:text-white">Edit Profile</a>
            <a href="#" class="block px-4 py-2 text-sm text-gray-700 hover:bg-blue-500 hover:text-white">Sign Out</a>
          </div>
        </div>
      </div>
    </div>
  </nav>

  <div class="container m-4">

    <h2 class="text-2xl mb-4 mt-8 ml-4">Edit Courses</h2>

    <!-- Display Courses -->
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-4">
      <% courses.forEach((course) => { %>
        <div class="bg-white p-6 rounded-lg shadow-md">
          <h3 class="text-xl mb-4"><%= course.courseName %></h3>
          <p class="text-gray-600 mb-4"><%= course.description %></p>
          <!-- Add Edit button with link to course editing page -->
          <a href="/educator/addchapter/<%= course.id %>" class="bg-blue-500 text-white px-4 py-2 rounded-md inline-block">Edit</a>
        </div>
      <% }) %>
    </div>

  </div>

  <!-- Footer -->
  <%- include('partials/footer') %>

</body>
</html>
