<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link rel="shortcut icon" href="/images/favicon.ico" type="image/x-icon">
  <link href="https://cdn.jsdelivr.net/npm/tailwindcss@2.2.19/dist/tailwind.min.css" rel="stylesheet">
  <script src="https://kit.fontawesome.com/ba6d17dfa2.js" crossorigin="anonymous"></script>
  <title>Educator</title>
</head>
<body class="bg-gray-100">
  <!-- Navbar -->
  <nav class="bg-blue-500 p-4 text-white flex items-center justify-between">
    <div class="flex items-center">
      <a href="/student"><span class="text-4xl font-semibold">LMS</span></a>
    </div>

    <div class="flex items-center space-x-8">
      <!-- Dashboard Link -->
      <a href="/student" class="hover:underline text-lg">Dashboard<i class="fa-solid fa-table-columns" style="margin-left: 4px;"></i></a>

      <a href="/profile" class="hover:underline text-lg">Profile<i class="fa-regular fa-user" style="margin-left: 4px;"></i></a>

      <a href="/signout" class="hover:underline text-lg">SignOut<i class="fa-solid fa-arrow-right-from-bracket" style="margin-left: 4px;"></i></a>
    </div>
  </nav>


  <div class="container m-4">

    <h2 class="text-2xl mb-4 mt-8 ml-4">Edit Courses</h2>

    <!-- Display Courses -->
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-4">
      <% courses.forEach((course) => { %>
        <div class="bg-white p-6 rounded-lg shadow-md">
          <h3 class="text-xl mb-4"><%= course.courseName %></h3>
          <p class="text-gray-600 mb-4"><%= course.description %></p>
          <a href="/educator/addchapter/<%= course.id %>" class="bg-blue-500 text-white px-4 py-2 rounded-md inline-block">Edit</a>
        </div>
      <% }) %>
    </div>

  </div>

  <!-- Footer -->
  <%- include('partials/footer') %>

</body>
</html>
